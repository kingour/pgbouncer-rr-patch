+void cleanup_topology(TopologyData *topology) {
+	if (topology) {
+		if (topology->endpoint) {
+			free(topology->endpoint);
+		}
+		if (topology->role) {
+			free(topology->role);
+		}
+		if (topology->status) {
+			free(topology->status);
+		}
+		free(topology);
+	}
